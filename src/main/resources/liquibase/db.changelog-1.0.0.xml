<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet id="1" author="krotscheck">
    <!-- Add users table -->
    <createTable tableName="users">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true"
                     nullable="false"
                     primaryKeyName="pk_users_id"/>
      </column>
      <column name="createdDate" type="DATETIME"/>
      <column name="modifiedDate" type="DATETIME"/>
      <column name="email" type="varchar(255)">
        <constraints unique="true"
                     uniqueConstraintName="c_users_email"
                     nullable="false"/>
      </column>
      <column name="name" type="text">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <!-- Add applications table -->
    <createTable tableName="applications">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true"
                     nullable="false"
                     primaryKeyName="pk_applications_id"/>
      </column>
      <column name="createdDate" type="DATETIME"/>
      <column name="modifiedDate" type="DATETIME"/>
      <column name="user" type="BIGINT">
        <constraints nullable="false" />
      </column>
      <column name="name" type="text">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addForeignKeyConstraint
        baseTableName="applications"
        baseColumnNames="user"
        constraintName="fk_applications_user"
        referencedTableName="users"
        referencedColumnNames="id"
        onUpdate="CASCADE"
        onDelete="CASCADE"
    />

    <rollback>
      <dropTable tableName="applications"/>
      <dropTable tableName="users"/>
    </rollback>
  </changeSet>

</databaseChangeLog>